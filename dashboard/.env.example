# NASA Space Biology Knowledge Engine Dashboard Environment Configuration
# Copy this file to .env and adjust the values as needed

# Dashboard Settings
DASHBOARD_TITLE="NASA Space Biology Knowledge Engine"
DASHBOARD_ICON="ðŸš€"
MAX_PAPERS_DISPLAY=1000
PAPERS_PER_PAGE=10

# Performance Settings
CACHE_TTL=3600
MAX_CACHE_ENTRIES=1000
ENABLE_LAZY_LOADING=true

# Neo4j Configuration (Optional - for advanced knowledge graph features)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=false

# Data Paths (relative to dashboard directory)
AI_NLP_DATA_PATH=../ai_nlp/outputs
RAW_DATA_PATH=../ai_nlp/data/raw

# Chatbot Settings
CHATBOT_MAX_RESULTS=10
CHATBOT_DEFAULT_RESULTS=3
ENABLE_SEMANTIC_SEARCH=true

# Graph Visualization
MAX_GRAPH_NODES=100
DEFAULT_GRAPH_LAYOUT=spring
ENABLE_INTERACTIVE_GRAPHS=true